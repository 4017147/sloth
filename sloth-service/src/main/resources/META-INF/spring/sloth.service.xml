<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="serviceRegistry" name="serviceRegistry" class="com.adonia.sloth.service.zk.ZKServiceRegistry">
        <constructor-arg name="zkServerUri" value="${sloth.registry.zkServerUri:localhost:2181}" />
        <constructor-arg name="servicePath" value="${sloth.registry.servicePath:/sloth/service}" />
    </bean>

    <bean id="slothServiceDiscovery" name="slothServiceDiscovery" class="com.adonia.sloth.service.SlothServiceDiscovery">
        <constructor-arg name="context" value="${sloth.discovery.context}" />
        <constructor-arg name="port" value="${sloth.discovery.port}" />
    </bean>

    <bean id="serviceTemplate" name="serviceTemplate" class="com.adonia.sloth.service.rest.RestServiceTemplate">
        <constructor-arg name="servicePath" value="${sloth.registry.servicePath:/sloth/service}" />
        <constructor-arg name="zkServerUri" value="${sloth.registry.zkServerUri:localhost:2181}" />
    </bean>
</beans>